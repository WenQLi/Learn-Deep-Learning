import os  

outer_path = 'F:\\LearnPytorch\\CatVsDog\\data\\train'   #这里是你的图片的目录  
if __name__ == '__main__':  ## 只有作为脚本文件直接执行的时候 才可以运行
    i = 0  
    folder = os.listdir(outer_path)          #列举文件夹  
    listText = open('all_list_2.txt', 'a')  
    for file in folder:  
        if file[0:3] =='cat':  
            i = 0  
        if file[0:3] =='dog':  
            i = 1  
        name = file + ' ' + str(int(i)) + '\n'  
        listText.write(name)  
    listText.close()  
